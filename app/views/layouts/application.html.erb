<!DOCTYPE html>
<html>
  <head>
    <title>Kottaram</title>
    <%= favicon_link_tag 'favicon.png' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='inner-page'>
    <div>
      <%if current_user%>
        <%= link_to('Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'logout') %>
        <%= link_to 'splitwise', splitwises_path, class: 'menu'%>
        | <%= link_to 'Events', events_path, class: 'menu'%>
        | <%= link_to 'Analytics', analysis_splitwises_path, class: 'menu'%>
      <%end%>
    </div>
    <%= yield %>
  </body>
</html>
